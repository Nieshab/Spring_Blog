<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.username %><%= image_tag current_user.avatar.url %>

</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry %>
</p>

<p> <strong> Created At: </strong>
	<%= @post.created_at.strftime("%B, %A %d, %Y") %>
</p>


<div id="comments">

    <%= render 'comments/form', comment: @comment %>

</div>



<% @post.comments.each do |comment| %>
<div class = "well">
  <p><%= comment.created_at.strftime("%A, %B, %e, at %I:%M%p") %> <%= image_tag current_user.avatar.thumb %> <% comment.author %>
    said...</p>

    <p><%= comment.comment_entry %></p>

  </div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
